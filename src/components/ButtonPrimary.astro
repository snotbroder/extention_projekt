---
import "../styles/generel.css";

const { data } = Astro.props;
---

<div class="knapcontainer">
  <a target="_blank" href={data.cta_link}>{data.buttonTitle}</a>
  <div class="baggrund"></div>
</div>

<style>
  .knapcontainer {
    display: grid;
    max-width: 16rem;
    max-height: 20%;
    z-index: 10;
  }
  a,
  .baggrund {
    grid-area: 1/1;
  }

  a {
    display: block;
    max-width: fit-content;
    max-height: fit-content;
    border: solid rgba(145, 218, 148, 1) 3px;
    background-color: transparent;
    border-radius: 1px;
    padding: 1rem 4rem;
    margin: 2rem 2rem;

    transition: all 0.3s;
    text-decoration: none;
    color: black;
    font-weight: 700;
    z-index: 5;
  }

  .baggrund {
    display: block;
    position: relative;
    z-index: 1;
    top: 1rem;
    left: 2rem;

    width: 5rem;
    border-radius: 1px;

    padding: 1rem 5.9rem;
    margin: 2rem 2rem;

    background-color: rgba(145, 218, 148, 0.35);

    filter: blur(5px);

    transition: all 0.3s;
  }

  .knapcontainer:hover .baggrund {
    transition: all 0.2s;
    top: 0%;
    left: 0%;
    filter: blur(0);
  }

  .knapcontainer:active .baggrund {
    background-color: rgba(145, 218, 148, 1);
  }
</style>
